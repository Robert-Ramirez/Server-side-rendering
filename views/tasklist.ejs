<% include partials/header %>

    <div class = "container">
        
        <header class = "jumbotron">
            <div>
                <h1>Welcome to ToDo!</h1>
                <p>View our hand-picked tasklist from all over the world</p>
                <p>
                    <a class = "btn btn-primary btn-lg" href = "/tasklist/new">Add New Campground</a>
                </p>
            </div>
        </header>
        
        <div class = "row text-center" style = "display:flex; flex-wrap: wrap;">
            <% tasklist.forEach(function(campground){ %>
                 <div class = "col-md-3 col-sm-6">
                     <div class = "thumbnail">
                         <img src = " <%= campground.image %> ">
                         <div class ="caption">
                            <h4> <%= campground.name %> </h4> 
                         </div>
                     </div>
                 </div>
            <% }); %>
        </div>
    </div>
<% include partials/footer %>