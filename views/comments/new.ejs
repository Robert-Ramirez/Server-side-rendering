<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= tasklists.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <!--key concept for routing from a posting/sending to database and rerouting to index page-->
            <form action="/tasklists/<%= tasklists._id %>/comments" method="POST">
                <!--creating the form boxes for user input-->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <!--link to go back to index page-->
            <a href="/tasklists">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

