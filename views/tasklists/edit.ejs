<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= tasklists.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/tasklists/<%= tasklists._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="tasklists[name]" value="<%= tasklists.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="tasklists[description]" value="<%= tasklists.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/tasklists">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

